#!/bin/bash

# find swiftlint path
SWIFTLINT_PATH=""
path=$(find ~/ -name "GaeManda.xcworkspace" -print -quit 2>/dev/null)
if [ -n "$path" ]; then
  directory=$(dirname "$path")
  swiftlint_path=$(find "$directory" -name "swiftlint" -type f -print -quit 2>/dev/null)
  if [ -n "$swiftlint_path" ]; then
    echo "GaeManda.xcworkspace 파일이 있는 디렉토리에서 swiftlint 파일을 찾았습니다."
    echo "[PATH] : $swiftlint_path"
    echo ""
    SWIFTLINT_PATH=$swiftlint_path
  else
    echo "GaeManda.xcworkspace 파일이 있는 디렉토리에서 swiftlint 파일을 찾을 수 없습니다."
    exit 1
  fi
else
  echo "GaeManda.xcworkspace 파일을 찾을 수 없습니다."
  exit 1
fi

# is executable?
if [ -n "$SWIFTLINT_PATH" ] && [ -e "${SWIFTLINT_PATH}" ]; then
  echo "🚀 swiftlint 검사 중..."
  echo ""
else
  echo "❌ swiftlint 검사 실패."
  exit 1
fi

# find files to apply swiftlint
changed_files=$(git diff --stat --cached)
upstream_branch=$(git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD)) 
swift_files=$(git diff --stat --cached --diff-filter=d --name-only $upstream_branch | grep -E "\.swift$")

if [ -n "$changed_files" ] && [ -z "$swift_files" ]; then
  echo "🙆🏻‍♂️ 커밋 성공."
  exit 0
elif [ -z "$changed_files" ] || [ -z "$swift_files" ]; then
  echo "🙋🏻‍♂️ 스테이징 영역에 파일이 없습니다."
  exit 1
fi

# execute swiftlint
lint_result=$($SWIFTLINT_PATH lint --quiet --config .swiftlint.yml)

echo ""
echo "🚀 swiftlint 검사 완료."

if [ -z "$lint_result" ]; then
  echo "❤️  작성한 코드가 swiftlint에 맞습니다."
  echo "🙆🏻‍♂️ 커밋 성공."
else
	echo ""
	printf "💔 swiftlint에 어긋나는 코드가 있습니다. 아래 내용을 확인해주세요.\n\n"

  while IFS=':' read -r file_path \
                        line_number \
                        column_number \
                        error_type \
                        error_message \
                        error_description; do
    icon="🚧"
    if [ "$error_type" = " error" ]; then
      icon="🚨"
    fi

    echo "$icon$error_type"
    echo "┗ $file_path:$line_number:$column_number"
    echo "┗$error_message:$error_description"
    echo ""
    
  done <<< "$lint_result"

  echo "🙅🏻‍♂️ 커밋 실패. swiftlint에 맞게 코드를 변경해주세요."
  exit 1
fi
